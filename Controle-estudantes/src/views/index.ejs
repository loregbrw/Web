<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="css/header.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <script defer src="js/script.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins&display=swap">
    <title>Controle de Estudantes</title>
</head>

<body>
    <header>
        <nav>
            <a class="navbar-brand font control" href="/"><span class="controle bold">CONTROLE</span> de Estudantes</a>
            <ul>
                <li>
                    <span class="active bold font" aria-current="page">Cadastrar: </span>
                </li>
                <li>
                    <a class="nav-link font control" href="/alunos">Alunos</a>
                </li>
                <li>
                    <span class="font"> | </span>
                </li>
                <li>
                    <a class="nav-link font control" href="/salas">Salas</a>
                </li>
            </ul>
        </nav>
    </header>

    <main>
        <div class="select">
            <div>
                <span class="font">Salas de Aula:</span>
                <form action="/" method="post">
                    <select onchange="this.form.submit()" class="font small" name="nome">
                        <option value="0">Selecione uma sala</option>
                        <% salas.forEach (i=> { %>
                            <option value="<%= i.IDSala %>" <%=id==i.IDSala ? 'selected' :'' %>>
                                <%= i.Nome %>
                            </option>
                        <% }) %>
                    </select>
                </form>
            </div>
        </div>

        <div class="alunos">
            <p class="font bold big">Alunos</p>
            <div class="alunos">
                <% alunos.forEach (i=> {%>
                    <div class="aluno">
                        <img src="img/<%- i.Foto %>" class="img">
                        <p class="font bold"><%- i.Nome %></p>
                        <p class="font small">Idade: <%- i.Idade %></p>
                        <a class="button font bold small" href="/editar/<%= i.IDAluno %>">Editar</a>
                    </div>
                    <% }) %>
            </div>
        </div>
    </main>

</body>

</html>